{
  "name": "mgnrega-backend",
  "version": "1.0.0",
  "description": "Backend API for MGNREGA Performance Dashboard - visualizes district-level MGNREGA data for citizens in India",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "cron": "node src/jobs/dataFetchCron.js"
  },
  "keywords": [
    "mgnrega",
    "india",
    "government",
    "data",
    "api",
    "dashboard",
    "performance"
  ],
  "author": "ankitBytes",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
