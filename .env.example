# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/mgnrega-dashboard
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/mgnrega-dashboard

# MGNREGA Open API Configuration
MGNREGA_API_BASE_URL=https://api.data.gov.in/resource
MGNREGA_API_KEY=your_api_key_here
# Get your API key from: https://data.gov.in/

# CORS Configuration
CLIENT_URL=http://localhost:3000
# In production: https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Job Configuration
CRON_SCHEDULE=0 2 * * *
# Default: Run at 2 AM daily (0 2 * * *)
# Format: minute hour day month dayOfWeek

# Geocoding API (Optional - for location detection)
GEOCODING_API_KEY=your_geocoding_api_key
GEOCODING_API_URL=https://api.opencagedata.com/geocode/v1/json
# Alternative: Google Maps API, Mapbox, etc.

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Cache Configuration
CACHE_TTL=3600
# Time to live in seconds (default: 1 hour)

# Security
JWT_SECRET=your_jwt_secret_key_here
# Only needed if you add authentication later
